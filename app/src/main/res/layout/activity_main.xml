<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sisconnection.winboxphone.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@color/accent_material_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Connect To:"
            android:id="@+id/textconnect"
            android:autoText="false" />

        <EditText
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:background="@android:color/holo_orange_light"
            android:layout_gravity="center_horizontal"
            android:hint="    192.168.1.1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Login:"
            android:id="@+id/textlogin"
            android:clickable="false"
            android:contextClickable="false"
            android:elegantTextHeight="false"
            android:forceHasOverlappingRendering="true" />

        <EditText
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:background="@android:color/holo_orange_light"
            android:layout_gravity="center_horizontal"
            android:hint="    Admin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password:"
            android:id="@+id/textpassword" />

        <EditText
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText3"
            android:background="@android:color/holo_orange_light"
            android:layout_gravity="center_horizontal"
            android:hint="  Admin" />

        <Button
            android:layout_width="78dp"
            android:layout_height="35dp"
            android:text="Connect"
            android:id="@+id/buttonconnect"
            android:background="#f90673"
            android:layout_gravity="right" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            android:foreground="@android:drawable/ic_secure"
            android:forceHasOverlappingRendering="false" />

    </LinearLayout>

</RelativeLayout>
